<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp" />
            <stroke android:width="1dip" android:color="@color/onclick" />
            <gradient android:angle="-90" android:startColor="@color/onclick" android:endColor="@color/onclick"  />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp" />
            <stroke android:width="1dip" android:color="@color/onclick" />
            <solid android:color="@color/onclick"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp" />
            <stroke android:width="1dip" android:color="@color/onclick" />
            <solid android:color="@color/onclick"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp" />
            <stroke android:width="1dip" android:color="@color/Transparent" />
            <gradient android:angle="-90" android:startColor="@color/Transparent" android:endColor="@color/Transparent" />
        </shape>
    </item>

</selector>